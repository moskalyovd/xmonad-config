                                       -- "-a", "notify-send -u critical 'Батарея садится!'"
                                       ] 600
                        --, Run Alsa "default" "Master" [] 10
                        , Run Wireless "wlp0s20f3" [] 10 -- кастомизировать
                        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }{ <fc=#ee9a00>%date%</fc> | %battery% | %kbd% | %wlp0s20f3wi%"
        }
